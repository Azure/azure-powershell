{
  "resourceType": "flexibleServers/firewallRules",
  "apiVersion": "2025-08-01",
  "learnMore": {
    "url": "https://learn.microsoft.com/powershell/module/az.postgresqlflexibleserver"
  },
  "commands": [
    {
      "name": "Get-AzPostgreSqlFlexibleServerFirewallRule",
      "description": "Gets information about a firewall rule in a server.",
      "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.DBforPostgreSQL/flexibleServers/{serverName}/firewallRules/{firewallRuleName}",
      "help": {
        "learnMore": {
          "url": "https://learn.microsoft.com/powershell/module/az.postgresqlflexibleserver/get-azpostgresqlflexibleserverfirewallrule"
        },
        "parameterSets": [
          {
            "parameters": [
              "-Name <String>",
              "-ResourceGroupName <String>",
              "-ServerName <String>",
              "[-SubscriptionId <String[]>]"
            ]
          }
        ]
      },
      "examples": [
        {
          "description": "Gets information about a firewall rule in a server.",
          "parameters": [
            {
              "name": "-Name",
              "value": "[Path.firewallRuleName]"
            },
            {
              "name": "-ResourceGroupName",
              "value": "[Path.resourceGroupName]"
            },
            {
              "name": "-ServerName",
              "value": "[Path.serverName]"
            },
            {
              "name": "-SubscriptionId",
              "value": "[Path.subscriptionId]"
            }
          ]
        }
      ]
    },
    {
      "name": "Remove-AzPostgreSqlFlexibleServerFirewallRule",
      "description": "Deletes an existing firewall rule.",
      "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.DBforPostgreSQL/flexibleServers/{serverName}/firewallRules/{firewallRuleName}",
      "help": {
        "learnMore": {
          "url": "https://learn.microsoft.com/powershell/module/az.postgresqlflexibleserver/remove-azpostgresqlflexibleserverfirewallrule"
        },
        "parameterSets": [
          {
            "parameters": [
              "-Name <String>",
              "-ResourceGroupName <String>",
              "-ServerName <String>",
              "[-SubscriptionId <String>]"
            ]
          }
        ]
      },
      "examples": [
        {
          "description": "Deletes an existing firewall rule.",
          "parameters": [
            {
              "name": "-Name",
              "value": "[Path.firewallRuleName]"
            },
            {
              "name": "-ResourceGroupName",
              "value": "[Path.resourceGroupName]"
            },
            {
              "name": "-ServerName",
              "value": "[Path.serverName]"
            },
            {
              "name": "-SubscriptionId",
              "value": "[Path.subscriptionId]"
            }
          ]
        }
      ]
    }
  ]
}
