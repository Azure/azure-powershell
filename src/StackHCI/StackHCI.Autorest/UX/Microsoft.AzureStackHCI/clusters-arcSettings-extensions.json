  "learnMore": {
    "url": "https://learn.microsoft.com/powershell/module/az.stackhci"
  },
  "commands": [
    {
      "name": "Get-AzStackHciExtension",
      "description": "Get particular Arc Extension of HCI Cluster.",
      "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.AzureStackHCI/clusters/{clusterName}/arcSettings/{arcSettingName}/extensions/{extensionName}",
      "help": {
        "learnMore": {
          "url": "https://learn.microsoft.com/powershell/module/az.stackhci/get-azstackhciextension"
        },
        "parameterSets": [
          {
            "parameters": [
              "-ArcSettingName <String>",
              "-ClusterName <String>",
              "-Name <String>",
              "-ResourceGroupName <String>",
              "[-SubscriptionId <String[]>]"
            ]
          }
        ]
      },
      "examples": [
        {
          "description": "Get particular Arc Extension of HCI Cluster.",
          "parameters": [
            {
              "name": "-ArcSettingName",
              "value": "[Path.arcSettingName]"
            },
            {
              "name": "-ClusterName",
              "value": "[Path.clusterName]"
            },
            {
              "name": "-Name",
              "value": "[Path.extensionName]"
            },
            {
              "name": "-ResourceGroupName",
              "value": "[Path.resourceGroupName]"
            },
            {
              "name": "-SubscriptionId",
              "value": "[Path.subscriptionId]"
            }
          ]
        }
      ]
    },
    {
      "name": "Remove-AzStackHciExtension",
      "description": "Delete particular Arc Extension of HCI Cluster.",
      "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.AzureStackHCI/clusters/{clusterName}/arcSettings/{arcSettingName}/extensions/{extensionName}",
      "help": {
        "learnMore": {
          "url": "https://learn.microsoft.com/powershell/module/az.stackhci/remove-azstackhciextension"
        },
        "parameterSets": [
          {
            "parameters": [
              "-ArcSettingName <String>",
              "-ClusterName <String>",
              "-Name <String>",
              "-ResourceGroupName <String>",
              "[-SubscriptionId <String>]"
            ]
          }
        ]
      },
      "examples": [
        {
          "description": "Delete particular Arc Extension of HCI Cluster.",
          "parameters": [
            {
              "name": "-ArcSettingName",
