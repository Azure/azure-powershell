{
  "resourceType": "clusters",
  "apiVersion": "2022-05-01",
  "learnMore": {
    "url": "https://learn.microsoft.com/powershell/module/az.stackhci"
  },
  "commands": [
    {
      "name": "Get-AzStackHciCluster",
      "description": "Get HCI cluster.",
      "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.AzureStackHCI/clusters/{clusterName}",
      "help": {
        "learnMore": {
          "url": "https://learn.microsoft.com/powershell/module/az.stackhci/get-azstackhcicluster"
        },
        "parameterSets": [
          {
            "parameters": [
              "-Name <String>",
              "-ResourceGroupName <String>",
              "[-SubscriptionId <String[]>]"
            ]
          }
        ]
      },
      "examples": [
        {
          "description": "Get HCI cluster.",
          "parameters": [
            {
              "name": "-Name",
              "value": "[Path.clusterName]"
            },
            {
              "name": "-ResourceGroupName",
              "value": "[Path.resourceGroupName]"
            },
            {
              "name": "-SubscriptionId",
              "value": "[Path.subscriptionId]"
            }
          ]
        }
      ]
    },
    {
      "name": "Remove-AzStackHciCluster",
      "description": "Delete an HCI cluster.",
      "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.AzureStackHCI/clusters/{clusterName}",
      "help": {
        "learnMore": {
          "url": "https://learn.microsoft.com/powershell/module/az.stackhci/remove-azstackhcicluster"
        },
        "parameterSets": [
          {
            "parameters": [
              "-Name <String>",
              "-ResourceGroupName <String>",
              "[-SubscriptionId <String>]"
            ]
          }
        ]
      },
      "examples": [
        {
          "description": "Delete an HCI cluster.",
          "parameters": [
            {
              "name": "-Name",
              "value": "[Path.clusterName]"
            },
            {
              "name": "-ResourceGroupName",
              "value": "[Path.resourceGroupName]"
            },
            {
              "name": "-SubscriptionId",
              "value": "[Path.subscriptionId]"
            }
          ]
        }
      ]
    }
  ]
}
