{
  "resourceType": "imageTemplates/triggers",
  "apiVersion": "2022-07-01",
  "learnMore": {
    "url": "https://learn.microsoft.com/powershell/module/az.imagebuilder"
  },
  "commands": [
    {
      "name": "Get-AzImageBuilderTrigger",
      "description": "Get the specified trigger for the specified image template resource",
      "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.VirtualMachineImages/imageTemplates/{imageTemplateName}/triggers/{triggerName}",
      "help": {
        "learnMore": {
          "url": "https://learn.microsoft.com/powershell/module/az.imagebuilder/get-azimagebuildertrigger"
        },
        "parameterSets": [
          {
            "parameters": [
              "-ImageTemplateName <String>",
              "-Name <String>",
              "-ResourceGroupName <String>",
              "[-SubscriptionId <String[]>]"
            ]
          }
        ]
      },
      "examples": [
        {
          "description": "Get the specified trigger for the specified image template resource",
          "parameters": [
            {
              "name": "-ImageTemplateName",
              "value": "[Path.imageTemplateName]"
            },
            {
              "name": "-Name",
              "value": "[Path.triggerName]"
            },
            {
              "name": "-ResourceGroupName",
              "value": "[Path.resourceGroupName]"
            },
            {
              "name": "-SubscriptionId",
              "value": "[Path.subscriptionId]"
            }
          ]
        }
      ]
    },
    {
      "name": "Remove-AzImageBuilderTrigger",
      "description": "Delete a trigger for the specified virtual machine image template",
      "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.VirtualMachineImages/imageTemplates/{imageTemplateName}/triggers/{triggerName}",
      "help": {
        "learnMore": {
          "url": "https://learn.microsoft.com/powershell/module/az.imagebuilder/remove-azimagebuildertrigger"
        },
        "parameterSets": [
          {
            "parameters": [
              "-ImageTemplateName <String>",
              "-Name <String>",
              "-ResourceGroupName <String>",
              "[-SubscriptionId <String>]"
            ]
          }
        ]
      },
      "examples": [
        {
          "description": "Delete a trigger for the specified virtual machine image template",
          "parameters": [
            {
              "name": "-ImageTemplateName",
              "value": "[Path.imageTemplateName]"
            },
            {
              "name": "-Name",
              "value": "[Path.triggerName]"
            },
            {
              "name": "-ResourceGroupName",
              "value": "[Path.resourceGroupName]"
            },
            {
              "name": "-SubscriptionId",
              "value": "[Path.subscriptionId]"
            }
          ]
        }
      ]
    }
  ]
}
