      "name": "Disable-AzPoolAutoScale",
      "description": "Disables automatic scaling for a pool.",
      "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.Batch/batchAccounts/{accountName}/pools/{poolName}/disableAutoScale",
      "help": {
        "learnMore": {
          "url": "https://learn.microsoft.com/powershell/module/az.batch/disable-azpoolautoscale"
        },
        "parameterSets": [
          {
            "parameters": [
              "-AccountName <String>",
              "-PoolName <String>",
              "-ResourceGroupName <String>",
              "[-SubscriptionId <String>]"
            ]
          }
        ]
      },
      "examples": [
        {
          "description": "Disables automatic scaling for a pool.",
          "parameters": [
            {
              "name": "-AccountName",
              "value": "[Path.accountName]"
            },
            {
              "name": "-PoolName",
              "value": "[Path.poolName]"
            },
            {
              "name": "-ResourceGroupName",
              "value": "[Path.resourceGroupName]"
            },
            {
              "name": "-SubscriptionId",
              "value": "[Path.subscriptionId]"
            }
          ]
        }
      ]
    },
