      "help": {
        "learnMore": {
          "url": "https://learn.microsoft.com/powershell/module/az.workloads/get-azworkloadssapapplicationinstance"
        },
        "parameterSets": [
          {
            "parameters": [
              "-Name <String>",
              "-ResourceGroupName <String>",
              "-SapVirtualInstanceName <String>",
              "[-SubscriptionId <String[]>]"
            ]
          }
        ]
      },
      "examples": [
        {
          "description": "Gets the SAP Application Server Instance corresponding to the Virtual Instance for SAP solutions resource.",
          "parameters": [
            {
              "name": "-Name",
              "value": "[Path.applicationInstanceName]"
            },
            {
              "name": "-ResourceGroupName",
              "value": "[Path.resourceGroupName]"
            },
            {
              "name": "-SapVirtualInstanceName",
              "value": "[Path.sapVirtualInstanceName]"
            },
            {
              "name": "-SubscriptionId",
              "value": "[Path.subscriptionId]"
            }
          ]
        }
      ]
    },
