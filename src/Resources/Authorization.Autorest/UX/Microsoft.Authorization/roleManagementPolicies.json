  "commands": [
    {
      "name": "Get-AzRoleManagementPolicy",
      "description": "Get the specified role management policy for a resource scope",
      "path": "/{scope}/providers/Microsoft.Authorization/roleManagementPolicies/{roleManagementPolicyName}",
      "help": {
        "learnMore": {
          "url": "https://learn.microsoft.com/powershell/module/az.resources/get-azrolemanagementpolicy"
        },
        "parameterSets": [
          {
            "parameters": [
              "-Name <String>",
              "-Scope <String>"
            ]
          }
        ]
      },
      "examples": [
        {
          "description": "Get the specified role management policy for a resource scope",
          "parameters": [
            {
              "name": "-Name",
              "value": "[Path.roleManagementPolicyName]"
            },
            {
              "name": "-Scope",
              "value": "[Path.scope]"
            }
          ]
        }
      ]
    },
    {
      "name": "Remove-AzRoleManagementPolicy",
      "description": "Delete a role management policy",
