          {
            "parameters": [
              "-Name <String>",
              "-Scope <String>"
            ]
          }
        ]
      },
      "examples": [
        {
          "description": "Delete a role management policy",
          "parameters": [
            {
              "name": "-Name",
              "value": "[Path.roleManagementPolicyName]"
            },
            {
              "name": "-Scope",
              "value": "[Path.scope]"
            }
          ]
        }
      ]
    }
  ]
