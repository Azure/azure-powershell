{
  "resourceType": "accounts/instances",
  "apiVersion": "2022-10-01",
  "learnMore": {
    "url": "https://learn.microsoft.com/powershell/module/az.deviceupdate"
  },
  "commands": [
    {
      "name": "Get-AzDeviceUpdateInstance",
      "description": "Returns instance details for the given instance and account name.",
      "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.DeviceUpdate/accounts/{accountName}/instances/{instanceName}",
      "help": {
        "learnMore": {
          "url": "https://learn.microsoft.com/powershell/module/az.deviceupdate/get-azdeviceupdateinstance"
        },
        "parameterSets": [
          {
            "parameters": [
              "-AccountName <String>",
              "-Name <String>",
              "-ResourceGroupName <String>",
              "[-SubscriptionId <String[]>]"
            ]
          }
        ]
      },
      "examples": [
        {
          "description": "Returns instance details for the given instance and account name.",
          "parameters": [
            {
              "name": "-AccountName",
              "value": "[Path.accountName]"
            },
            {
              "name": "-Name",
              "value": "[Path.instanceName]"
            },
            {
              "name": "-ResourceGroupName",
              "value": "[Path.resourceGroupName]"
            },
            {
              "name": "-SubscriptionId",
              "value": "[Path.subscriptionId]"
            }
          ]
        }
      ]
    },
    {
      "name": "Remove-AzDeviceUpdateInstance",
      "description": "Deletes instance.",
      "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.DeviceUpdate/accounts/{accountName}/instances/{instanceName}",
      "help": {
        "learnMore": {
          "url": "https://learn.microsoft.com/powershell/module/az.deviceupdate/remove-azdeviceupdateinstance"
        },
        "parameterSets": [
          {
            "parameters": [
              "-AccountName <String>",
              "-Name <String>",
              "-ResourceGroupName <String>",
              "[-SubscriptionId <String>]"
            ]
          }
        ]
      },
      "examples": [
        {
          "description": "Deletes instance.",
          "parameters": [
            {
              "name": "-AccountName",
              "value": "[Path.accountName]"
            },
            {
              "name": "-Name",
              "value": "[Path.instanceName]"
            },
            {
              "name": "-ResourceGroupName",
              "value": "[Path.resourceGroupName]"
            },
            {
              "name": "-SubscriptionId",
              "value": "[Path.subscriptionId]"
            }
          ]
        }
      ]
    }
  ]
}
