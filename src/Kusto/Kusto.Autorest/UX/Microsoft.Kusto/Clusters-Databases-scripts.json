{
  "resourceType": "Clusters/Databases/scripts",
  "apiVersion": "2024-04-13",
  "learnMore": {
    "url": "https://learn.microsoft.com/powershell/module/az.kusto"
  },
  "commands": [
    {
      "name": "Get-AzKustoScript",
      "description": "Gets a Kusto cluster database script.",
      "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.Kusto/Clusters/{clusterName}/Databases/{databaseName}/scripts/{scriptName}",
      "help": {
        "learnMore": {
          "url": "https://learn.microsoft.com/powershell/module/az.kusto/get-azkustoscript"
        },
        "parameterSets": [
          {
            "parameters": [
              "-ClusterName <String>",
              "-DatabaseName <String>",
              "-Name <String>",
              "-ResourceGroupName <String>",
              "[-SubscriptionId <String[]>]"
            ]
          }
        ]
      },
      "examples": [
        {
          "description": "Gets a Kusto cluster database script.",
          "parameters": [
            {
              "name": "-ClusterName",
              "value": "[Path.clusterName]"
            },
            {
              "name": "-DatabaseName",
              "value": "[Path.databaseName]"
            },
            {
              "name": "-Name",
              "value": "[Path.scriptName]"
            },
            {
              "name": "-ResourceGroupName",
              "value": "[Path.resourceGroupName]"
            },
            {
              "name": "-SubscriptionId",
              "value": "[Path.subscriptionId]"
            }
          ]
        }
      ]
    },
    {
      "name": "Remove-AzKustoScript",
      "description": "Deletes a Kusto database script.",
      "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.Kusto/Clusters/{clusterName}/Databases/{databaseName}/scripts/{scriptName}",
      "help": {
        "learnMore": {
          "url": "https://learn.microsoft.com/powershell/module/az.kusto/remove-azkustoscript"
        },
        "parameterSets": [
          {
            "parameters": [
              "-ClusterName <String>",
              "-DatabaseName <String>",
              "-Name <String>",
              "-ResourceGroupName <String>",
              "[-SubscriptionId <String>]"
            ]
          }
        ]
      },
      "examples": [
        {
          "description": "Deletes a Kusto database script.",
          "parameters": [
            {
              "name": "-ClusterName",
              "value": "[Path.clusterName]"
            },
            {
              "name": "-DatabaseName",
              "value": "[Path.databaseName]"
            },
            {
              "name": "-Name",
              "value": "[Path.scriptName]"
            },
            {
              "name": "-ResourceGroupName",
              "value": "[Path.resourceGroupName]"
            },
            {
              "name": "-SubscriptionId",
              "value": "[Path.subscriptionId]"
            }
          ]
        }
      ]
    }
  ]
}
