{
  "resourceType": "storageAccounts/blobServices/containers",
  "apiVersion": "2023-01-01",
  "learnMore": {
    "url": "https://learn.microsoft.com/powershell/module/az.sftp/#sftp"
  },
  "commands": [
    {
      "name": "Connect-AzSftp",
      "description": "Establish SFTP connection to Azure Storage accounts with hierarchical namespace enabled.",
  "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.Storage/storageAccounts/{storageAccount}/blobServices/default/containers/{container}",
      "help": {
        "learnMore": {
          "url": "https://learn.microsoft.com/powershell/module/az.sftp/connect-azsftp"
        },
        "parameterSets": [
          {
            "parameters": [
              "-StorageAccount <String>",
              "[-Port <Int32>]",
              "[-CertificateFile <String>]",
              "[-PrivateKeyFile <String>]",
              "[-PublicKeyFile <String>]",
              "[-LocalUser <String>]",
              "[-SftpArg <String[]>]",
              "[-SshClientFolder <String>]",
              "[-SshProxyFolder <String>]"
            ]
          }
        ]
      },
      "examples": [
        {
          "description": "Connect to Azure Storage SFTP with automatic Microsoft Entra authentication.",
          "parameters": [
            {
              "name": "-StorageAccount",
              "value": "mystorageaccount"
            }
          ]
        },
        {
          "description": "Connect using certificate-based authentication.",
          "parameters": [
            {
              "name": "-StorageAccount",
              "value": "mystorageaccount"
            },
            {
              "name": "-CertificateFile",
              "value": "~/.ssh/id_rsa-cert.pub"
            },
            {
              "name": "-PrivateKeyFile",
              "value": "~/.ssh/id_rsa"
            }
          ]
        },
        {
          "description": "Connect using local user authentication.",
          "parameters": [
            {
              "name": "-StorageAccount",
              "value": "mystorageaccount"
            },
            {
              "name": "-LocalUser",
              "value": "localuser"
            },
            {
              "name": "-PrivateKeyFile",
              "value": "~/.ssh/id_rsa"
            }
          ]
        }
      ]
    },
    {
      "name": "New-AzSftpCertificate",
      "description": "Generate SSH certificates for Azure Storage SFTP authentication using Microsoft Entra credentials.",
  "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.Storage/storageAccounts/{certificatePath}",
      "help": {
        "learnMore": {
          "url": "https://learn.microsoft.com/powershell/module/az.sftp/new-azsftpcertificate"
        },
        "parameterSets": [
          {
            "parameters": [
              "-CertificatePath <String>",
              "[-PrivateKeyFile <String>]",
              "[-PublicKeyFile <String>]",
              "[-LocalUser <String>]",
              "[-SshClientFolder <String>]"
            ]
          }
        ]
      },
      "examples": [
        {
          "description": "Generate a new SSH certificate with automatic key generation.",
          "parameters": [
            {
              "name": "-CertificatePath",
              "value": "~/.ssh/azure-cert.pub"
            }
          ]
        },
        {
          "description": "Generate certificate from existing private key.",
          "parameters": [
            {
              "name": "-CertificatePath",
              "value": "~/.ssh/azure-cert.pub"
            },
            {
              "name": "-PrivateKeyFile",
              "value": "~/.ssh/id_rsa"
            }
          ]
        },
        {
          "description": "Generate certificate for local user authentication.",
          "parameters": [
            {
              "name": "-CertificatePath",
              "value": "~/.ssh/azure-cert.pub"
            },
            {
              "name": "-LocalUser",
              "value": "localuser"
            }
          ]
        }
      ]
    }
  ]
}
