{
  "resourceType": "labs/virtualMachines",
  "apiVersion": "2021-10-01-preview",
  "learnMore": {
    "url": "https://learn.microsoft.com/powershell/module/az.labservices"
  },
  "commands": [
    {
      "name": "Get-AzLabServicesVM",
      "description": "Returns the properties for a lab virtual machine.",
      "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.LabServices/labs/{labName}/virtualMachines/{virtualMachineName}",
      "help": {
        "learnMore": {
          "url": "https://learn.microsoft.com/powershell/module/az.labservices/get-azlabservicesvm"
        },
        "parameterSets": [
          {
            "parameters": [
              "-LabName <String>",
              "-Name <String>",
              "-ResourceGroupName <String>",
              "[-SubscriptionId <String[]>]"
            ]
          }
        ]
      },
      "examples": [
        {
          "description": "Returns the properties for a lab virtual machine.",
          "parameters": [
            {
              "name": "-LabName",
              "value": "[Path.labName]"
            },
            {
              "name": "-Name",
              "value": "[Path.virtualMachineName]"
            },
            {
              "name": "-ResourceGroupName",
              "value": "[Path.resourceGroupName]"
            },
            {
              "name": "-SubscriptionId",
              "value": "[Path.subscriptionId]"
            }
          ]
        }
      ]
    },
    {
      "name": "Start-AzLabServicesVMRedeployment",
      "description": "Action to redeploy a lab virtual machine to a different compute node.\nFor troubleshooting connectivity.",
      "path": "/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.LabServices/labs/{labName}/virtualMachines/{virtualMachineName}/redeploy",
      "help": {
        "learnMore": {
          "url": "https://learn.microsoft.com/powershell/module/az.labservices/start-azlabservicesvmredeployment"
        },
        "parameterSets": [
          {
            "parameters": [
              "-LabName <String>",
              "-ResourceGroupName <String>",
              "[-SubscriptionId <String>]",
              "-VirtualMachineName <String>"
            ]
          }
        ]
      },
      "examples": [
        {
          "description": "Action to redeploy a lab virtual machine to a different compute node. For troubleshooting connectivity.",
          "parameters": [
            {
              "name": "-LabName",
              "value": "[Path.labName]"
            },
            {
              "name": "-ResourceGroupName",
              "value": "[Path.resourceGroupName]"
            },
            {
              "name": "-SubscriptionId",
              "value": "[Path.subscriptionId]"
            },
            {
              "name": "-VirtualMachineName",
              "value": "[Path.virtualMachineName]"
            }
          ]
        }
      ]
    },
