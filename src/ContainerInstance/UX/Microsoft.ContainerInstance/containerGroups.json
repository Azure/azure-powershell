         "name":"Get-AzContainerGroup",
         "description":"Gets the properties of the specified container group in the specified subscription and resource group.",
         "path":"/subscriptions/{subscriptionId}/resourceGroups/{resourceGroupName}/providers/Microsoft.ContainerInstance/containerGroups/{containerGroupName}",
         "confirmation":false,
         "help":{
            "learnMore":{
               "url":"https://learn.microsoft.com/powershell/module/az.containerinstance/get-azcontainergroup"
            },
            "parameterSets":[
               {
                  "parameters":[
                     "[-SubscriptionId <String[]>]",
                     "-ResourceGroupName <String>",
                     "-Name <String>"
                  ]
               }
            ]
         },
         "examples":[
            {
               "description":"Gets the properties of the specified container group in the specified subscription and resource group.",
               "parameters":[
                  {
                     "name":"SubscriptionId",
                     "value":"subscriptionId"
                  },
                  {
                     "name":"-ResourceGroupName",
                     "value":"[path.resourceGroupName]"
                  },
                  {
                     "name":"-VMScaleSetName",
                     "value":"[path.containerGroupName]"
                  }
               ]
            }
         ]
      },
